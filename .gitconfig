[user]
    email = evan@mefunction.com
    name = Evan Marell

[merge]
    summary=true

[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    gl = log --graph --decorate --pretty=oneline --abbrev-commit
    gla = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    dtag = tag release-`date "+%Y%m%d%H%M"`
    unstage = reset HEAD
    uncommit = reset --soft HEAD^


[core]
    excludesfile = /Users/bigcat/.globalgitignore
